
  <h1>Welcome to Shaq Overflow!</h1>
  <p>Hello, world!</p>


  <% if @questions %>
      <% @questions.each do |question| %>

       <article id="<%= question.id %>" class="question-summary">
        <div class="question-info inline">
          <div class="votes inline">
            <div class="vote-count">
              <%= question.points %>
            </div>
            <div>votes</div>
          </div>

          <div class="answers inline">
            <div class="answer-count">
              <%= question.answers.count %>
            </div>
            <div>answers</div>
          </div>
        </div>

        <div class="summary inline">
          <h3><a href="/questions/<%= question.id %>"><%= question.title %></a></h3>
        </div>
       </article>

      <% end %>
  <% end %>
</div>
